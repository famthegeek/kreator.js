.slides section
  border: 1px solid #333;
  box-shadow: 0 0 5px #333;
  &:focus
    outline: none;

.add-slide
  position: absolute;
  background: white;
  border-radius: 50%;
  width: 2rem;
  height: 2rem;
  text-align: center;
  line-height: 2rem;
  color: #333;
  z-index: 100;
  cursor: pointer;

.add-slide--right
  right: 0;
  top: 50%;

.add-slide--bottom
  bottom: 80px;
  left: 50%;

.container
  width: 80%;
  margin: 0 auto;
  text-align: center;

.menu-item,
.menu-item--group
  list-style: none;
  display: inline-block;
  background: hsla(100, 100, 100, .1);
  padding: 5px;
  border: 1px solid hsla(0, 0, 0, .4);
  height: 1.5rem;
  border-radius: 3px;
  a
    color: #f4f4f4;

button,
input,
select
  display: inline-block;
  margin: 0;
  padding: 0;
  font-size: 1rem;
  line-height: 1rem;
  height: 1.5rem;
  border: none;
  border-bottom: 1px solid #222;
  border-right: 1px solid #444;
  background: #858585;
  padding:3px 9px;
  color: #f4f4f4;
  text-shadow:0 1px 0 #333;
  border-radius: 3px;

input[type=color],
input[type=file]
  padding: 0;
